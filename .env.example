# ==============================================
# БАЗА ДАННЫХ
# ==============================================
# URL для подключения к базе данных PostgreSQL (Timeweb Cloud Database)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require"

# ==============================================
# БЕЗОПАСНОСТЬ
# ==============================================
# Секретный ключ для подписи JWT-токенов
# Сгенерируйте: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-32-characters-long"

# ==============================================
# TELEGRAM BOT
# ==============================================
# Токен Telegram бота (получить у @BotFather)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"

# Базовый URL приложения (для Vercel будет автоматически)
NEXT_PUBLIC_BASE_URL="https://your-app.vercel.app"

# ==============================================
# EMAIL (ОПЦИОНАЛЬНО)
# ==============================================
# Настройки для получения заявок по email
EMAIL_HOST="imap.gmail.com"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
SMTP_HOST="smtp.gmail.com"

# ==============================================
# ФАЙЛОВОЕ ХРАНИЛИЩЕ (ОПЦИОНАЛЬНО)
# ==============================================
# Timeweb Cloud Object Storage (S3-совместимое)
S3_ENDPOINT="https://s3.timeweb.cloud"
S3_BUCKET="your-bucket-name"
S3_ACCESS_KEY="your-access-key"
S3_SECRET_KEY="your-secret-key"
S3_REGION="ru-1"
